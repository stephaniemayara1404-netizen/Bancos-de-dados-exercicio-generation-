# Seleção de dados específicos da tabela por meio de filtros
SELECT * FROM 	tb_estudantes WHERE nota > 7;

SELECT * FROM 	tb_estudantes WHERE nota < 7;

UPDATE tb_estudantes SET nota = 9.5 WHERE id_estudante = 7; 



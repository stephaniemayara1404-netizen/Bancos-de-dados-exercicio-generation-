# Seleção de dados específicos da tabela por meio de filtros
SELECT * FROM tb_produtos WHERE preco > 500;

SELECT * FROM tb_produtos WHERE preco < 500;

UPDATE tb_produtos SET preco = 89.90, estoque = 45 WHERE id_produto = 4; 



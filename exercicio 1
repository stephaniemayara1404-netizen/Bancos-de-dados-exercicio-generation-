# Seleção de dados específicos da tabela por meio de filtros
SELECT * FROM tb_colaboradores WHERE salario > 2000;

SELECT * FROM tb_colaboradores WHERE salario < 2000;

UPDATE tb_colaboradores SET salario = 2200, cargo = 'Assistente Administrativo' WHERE id = 4; 


 
 
 

DELETE FROM tb_personagens WHERE id > 0; -- deletar os dados 

SELECT * FROM tb_personagens WHERE ataque > 2000;

SELECT * FROM tb_personagens WHERE defesa BETWEEN 1000 AND 2000; -- BETWEEN significa "entre algo"

SELECT * FROM tb_personagens WHERE nome LIKE '%c%'; -- LIKE serve para fazer uma pesquisa


SELECT tb_personagens.id,nome,classes,nivel,tipo_ataque,ataque,defesa,nivel_dificuldade -- selecione todos 
FROM tb_personagens INNER JOIN tb_classes
ON tb_personagens.id_classe = tb_classes.id;

SELECT tb_personagens.id,nome,classes,nivel,tipo_ataque,ataque,defesa,nivel_dificuldade -- selecione todos 
FROM tb_personagens INNER JOIN tb_classes -- unindo os dados das tabelas 
ON tb_personagens.id_classe = tb_classes.id -- comparando id_classe da tabela personages = id da tabela classes
WHERE classes = 'Guerreiro';  -- onde 
















CREATE DATABASE db_generation_game_online;

USE db_generation_game_online;

CREATE TABLE tb_classes( 
id BIGINT AUTO_INCREMENT PRIMARY KEY,
classes VARCHAR (50) NOT NULL,
tipo_ataque VARCHAR(30),
nivel_dificuldade INT -- usado para números médios, como níveis, idade, quantidade de itens
);

CREATE TABLE tb_personagens( 
id BIGINT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR (50) NOT NULL,
nivel INT, 
ataque INT, 
defesa INT, 
id_classe BIGINT, -- usar BIGINT quando precisar de números muito grandes ou muitos registros
FOREIGN KEY(id_classe) REFERENCES tb_classes(id) -- cria relacionamento entre as tabelas personagem e classes 
-- atraves do atributo id da tabela classes e o atributo id_classe da tabela personagens 
);


SELECT * FROM tb_personagens;
SELECT * FROM tb_classes;
-- inserir dados na tabela 
